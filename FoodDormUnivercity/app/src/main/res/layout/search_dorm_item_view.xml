<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:layout_weight="0.9"
        app:cardElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtStudentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:text="محمدامین چهاردولی"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/iran_yekan_mobile_light"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtStudentCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtStudentName"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/iran_yekan_mobile_light"
                android:text="شماره دانشجویی 95221033111060"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <CheckBox
        android:id="@+id/chkDeliveryCheck"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|center_vertical"/>
</LinearLayout>